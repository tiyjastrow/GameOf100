# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.GameController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Bundle files generated by Webpack
GET     /bundles/*file              controllers.GameController.bundle(file)

GET     /games                      controllers.GameController.getGames

POST    /game                       controllers.GameController.joinGame

POST    /connected                  controllers.GameController.connected

GET     /players                    controllers.GameController.getConnections(gameName: String)

GET     /hand                       controllers.GameController.getHand(gameName: String, playerNumber: Int)

GET     /player                     controllers.GameController.getTurn(gameName: String)